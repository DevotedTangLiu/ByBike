<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <!-- 标题栏区域 -->

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:background="@drawable/title_bar" >

        <RelativeLayout
            android:id="@+id/goBack"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:onClick="clickHandler"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:background="@drawable/cancel_button2" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="创建友好点"
            android:textColor="#4A4A4A"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#C5C5C5" />

    <com.example.bybike.marker.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 友好点类型选择 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:background="#F5F5F5"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="27dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type1"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_rentbike"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type1text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="租车"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type2"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_bikestore"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type2text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="车店"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type3"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_parking"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type3text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="停车"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type4"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_scenery"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type4text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="景点"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 第二排友好点选择 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type5"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_repair"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type5text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="维修"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type6"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_meals"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type6text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="餐饮"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type7"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_washroom"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type7text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="卫生间"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type8"
                            android:layout_width="54dp"
                            android:layout_height="63dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/marker_icon_others"
                            android:onClick="clickHandler" />

                        <TextView
                            android:id="@+id/type8text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="其他"
                            android:textColor="#646464"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 分隔条 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="11dp"
                android:background="@drawable/divider" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="vertical" >

                <!-- 标记名称 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_input_background" >

                    <EditText
                        android:id="@+id/markerName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:hint="友好点名称..."
                        android:singleLine="true"
                        android:textColor="#D2D2D2"
                        android:textColorHint="#D2D2D2"
                        android:textSize="16sp" >
                    </EditText>
                </LinearLayout>
                <!-- 标记地址 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_input_background" >

                    <EditText
                        android:id="@+id/markerAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:hint="地址..."
                        android:singleLine="true"
                        android:textColor="#D2D2D2"
                        android:textColorHint="#D2D2D2"
                        android:textSize="16sp" >
                    </EditText>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="25dp"
                    android:text="确认地图位置"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp" />

                <!-- 地图 -->

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/bmapView"
                    android:layout_width="fill_parent"
                    android:layout_height="113dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true" />

                <!-- 描述 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="117dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_input_background" >

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:hint=" 描述一下这里吧..."
                        android:textColor="#D2D2D2"
                        android:textColorHint="#D2D2D2"
                        android:textSize="16sp" >
                    </EditText>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="20dp"
                    android:text="上传实地照片"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/photo1"
                            android:layout_width="62dp"
                            android:layout_height="64dp"
                            android:background="@drawable/add_photo_button"
                            android:onClick="clickHandler"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/photo2"
                            android:layout_width="62dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/add_photo_button"
                            android:onClick="clickHandler"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/photo3"
                            android:layout_width="62dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/add_photo_button"
                            android:onClick="clickHandler"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/photo4"
                            android:layout_width="62dp"
                            android:layout_height="64dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/add_photo_button"
                            android:onClick="clickHandler"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rentBikeArea"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <!-- 经营店类型选择 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="20dp"
                        android:text="经营店类型"
                        android:textColor="#BBBBBB"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/operatingType"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >


                            <RadioButton
                                android:id="@+id/publicType"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="公共单车"
                                android:textColor="#BBBBBB" />

                            <RadioButton
                                android:id="@+id/bikeStoreType"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="车店"
                                android:textColor="#BBBBBB" />

                            <RadioButton
                                android:id="@+id/privateType"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="私人"
                                android:textColor="#BBBBBB" />
                        
                    </RadioGroup>

                    <!-- 车型选择 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="20dp"
                        android:text="车型"
                        android:textColor="#BBBBBB"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <CheckBox
                                android:id="@+id/gongluche"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="公路车"
                                android:textColor="#BBBBBB" />

                            <CheckBox
                                android:id="@+id/shandiche"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="山地车"
                                android:textColor="#BBBBBB" />

                            <CheckBox
                                android:id="@+id/xiaozhe"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="小折"
                                android:textColor="#BBBBBB" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <CheckBox
                                android:id="@+id/shuangren"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="双人单车"
                                android:textColor="#BBBBBB" />

                            <CheckBox
                                android:id="@+id/sifei"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:text="死飞"
                                android:textColor="#BBBBBB" />

                            <CheckBox
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/login_input_background" >

                        <EditText
                            android:id="@+id/priceRentBike"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@null"
                            android:hint="价格..."
                            android:singleLine="true"
                            android:textColor="#D2D2D2"
                            android:textColorHint="#D2D2D2"
                            android:textSize="16sp" 
                            android:numeric="decimal">
                        </EditText>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/login_input_background" >

                        <EditText
                            android:id="@+id/phoneNumberRentBike"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@null"
                            android:hint="电话..."
                            android:phoneNumber="true"
                            android:singleLine="true"
                            android:textColor="#D2D2D2"
                            android:textColorHint="#D2D2D2"
                            android:textSize="16sp" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <!-- 车店 -->

                <LinearLayout
                    android:id="@+id/bikeStroeArea"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/login_input_background" >

                        <EditText
                            android:id="@+id/phoneNumberBikeStore"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@null"
                            android:hint="电话..."
                            android:phoneNumber="true"
                            android:singleLine="true"
                            android:textColor="#D2D2D2"
                            android:textColorHint="#D2D2D2"
                            android:textSize="16sp" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <!-- 停车 -->
                <LinearLayout
                    android:id="@+id/parkArea"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="20dp"
                        android:text="是否有人保管"
                        android:textColor="#BBBBBB"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/takeCaredArea"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="5dp" 
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/haveTakeCared"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="有人保管"
                            android:textColor="#BBBBBB" />

                        <RadioButton
                            android:id="@+id/noTakeCared"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="无人保管"
                            android:textColor="#BBBBBB" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="20dp"
                        android:text="室内/室外"
                        android:textColor="#BBBBBB"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/indorOutDoorChooose"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="5dp" 
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/inDoor"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="室内"
                            android:textColor="#BBBBBB" />

                        <RadioButton
                            android:id="@+id/outDoor"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="室外"
                            android:textColor="#BBBBBB" />
                    </RadioGroup>
                </LinearLayout>

                <!-- 景点 -->
                <LinearLayout
                    android:id="@+id/sceneryArea"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" 
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="20dp"
                        android:text="可否进入"
                        android:textColor="#BBBBBB"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/enterChoose"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/canEnter"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="可以进入"
                            android:textColor="#BBBBBB" />

                        <RadioButton
                            android:id="@+id/noEnter"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="不能进入"
                            android:textColor="#BBBBBB" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
