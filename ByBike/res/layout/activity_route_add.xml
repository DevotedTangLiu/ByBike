<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 标题栏区域 -->

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/title_bar" >

        <RelativeLayout
            android:id="@+id/goBack"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:onClick="clickHandler"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:background="@drawable/back_button" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="创建路书"
            android:textColor="#4A4A4A"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C5C5C5" />
    <!-- 可滚动区域 -->

    <com.example.bybike.routes.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp"
        android:background="#F7F7F7"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 地图、图片区域 -->

            <RelativeLayout
                android:id="@+id/exercisePicArea"
                android:layout_width="fill_parent"
                android:layout_height="201dp" >

                <RelativeLayout
                    android:id="@+id/mapArea"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <com.baidu.mapapi.map.MapView
                        android:id="@+id/bmapView"
                        android:layout_width="fill_parent"
                        android:layout_height="201dp" />

                    <Button
                        android:id="@+id/showPictureArea"
                        android:layout_width="65dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/button_upload_pics"
                        android:onClick="clickHandler" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/picturesArea"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#90000000"
                    android:visibility="gone" >

                    <Button
                        android:id="@+id/showMapArea"
                        android:layout_width="42dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/button_map"
                        android:onClick="clickHandler" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="13dp"
                        android:layout_toLeftOf="@id/showMapArea"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="82dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/photo1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/add_photo_button2"
                                android:onClick="clickHandler"
                                android:scaleType="centerCrop" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="fill_parent" />

                            <ImageView
                                android:id="@+id/photo2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/add_photo_button2"
                                android:onClick="clickHandler"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="fill_parent" />

                            <ImageView
                                android:id="@+id/photo3"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/add_photo_button2"
                                android:onClick="clickHandler"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="82dp"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/photo4"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/add_photo_button2"
                                android:onClick="clickHandler"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="fill_parent" />

                            <ImageView
                                android:id="@+id/photo5"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/add_photo_button2"
                                android:onClick="clickHandler"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="fill_parent" />

                            <ImageView
                                android:id="@+id/photo6"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/add_photo_button2"
                                android:onClick="clickHandler"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <!-- 里程和时间 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/add_routebook_bac"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="9dp"
                            android:background="@drawable/riding_distance"
                            android:contentDescription="@null" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#4A4A4A"
                                android:textSize="31sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" km"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/divider3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="9dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/riding_speed"
                            android:contentDescription="@null" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#4A4A4A"
                                android:textSize="31sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" km/h"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/divider3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="8dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/riding_reduce_carbon"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/reduceCarbon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-4dp"
                                android:layout_marginLeft="5dp"
                                android:text=""
                                android:textColor="#4A4A4A"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" t"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="8dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/riding_time"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/timeUsed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-4dp"
                                android:layout_marginLeft="5dp"
                                android:text=""
                                android:textColor="#4A4A4A"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 里程和时间区域结束 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="39dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/bottom_routebook_normal" />

                    <EditText
                        android:id="@+id/routeTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:hint="路书主题..."
                        android:textColorHint="#D2D2D2"
                        android:textColor="#D2D2D2"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/devider" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal" >

                    <!-- 头像 -->

                    <com.example.bybike.util.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="19dp"
                        android:src="@drawable/user" />

                    <!-- <ImageView -->
                    <!-- android:layout_width="30dp" -->
                    <!-- android:layout_height="30dp" -->
                    <!-- android:layout_marginLeft="16dp" -->
                    <!-- android:layout_marginTop="20dp" -->
                    <!-- android:src="@drawable/user" /> -->

                    <EditText
                        android:id="@+id/routeDetail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="23dp"
                        android:background="@null"
                        android:hint="有什么新鲜事...\n\n\n\n"
                        android:textColorHint="#D2D2D2"
                        android:textColor="#D2D2D2"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/devider" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="39dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/route_button" />

                    <EditText
                        android:id="@+id/routeAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:hint="途径路线..."
                        android:textColor="#D2D2D2"
                        android:textColorHint="#D2D2D2"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/devider" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/markerNamesArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/cornorshape"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/start_end_point" />

                    <TextView
                        android:id="@+id/markerNames"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textColor="#9B9B9B"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="34dp" >

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/cancel_button"
                    android:onClick="clickHandler" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/save_button"
                    android:onClick="clickHandler" />
            </RelativeLayout>
        </LinearLayout>
    </com.example.bybike.routes.ObservableScrollView>

</RelativeLayout>