<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 标题栏区域 -->

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/title_bar" >

        <RelativeLayout
            android:id="@+id/goBack"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:onClick="clickHandler"
            android:orientation="vertical" >

            <Button
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:background="@drawable/back_button" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="骑行小洲村"
            android:textColor="#4A4A4A"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <!-- 可滚动区域 -->

    <com.example.bybike.routes.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/spaceArea"
                android:layout_width="fill_parent"
                android:layout_height="201dp"
                android:background="@color/cover_color"
                android:orientation="vertical"
                android:visibility="invisible" />

            <!-- 里程和时间 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="@drawable/exercise_detail"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="里程"
                            android:textColor="#4A4A4A"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/distanceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="103"
                                android:textColor="#4A4A4A"
                                android:textSize="27sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="km"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="均速"
                            android:textColor="#4A4A4A"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/speedText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.2"
                                android:textColor="#4A4A4A"
                                android:textSize="27sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="km/h"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="减碳"
                                android:textColor="#4A4A4A"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="0.2"
                                android:textColor="#4A4A4A"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="t"
                                android:textColor="#9B9B9B"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                android:textColor="#4A4A4A"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="00"
                                android:textColor="#4A4A4A"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=":"
                                android:textColor="#9B9B9B"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/minute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="32"
                                android:textColor="#4A4A4A"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=":"
                                android:textColor="#9B9B9B"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/second"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="16"
                                android:textColor="#4A4A4A"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!-- 里程和时间区域结束 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7" >

                <!-- 头像 -->

                <com.example.bybike.util.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical" >

                    <!-- 用户名 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Icy_x"
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <!-- 路书详情 -->

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/route_detail"
                        android:textColor="#777777"
                        android:textSize="12sp" />

                    <!-- 路径和时间 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="13dp"
                            android:background="@drawable/route_button" />

                        <TextView
                            android:id="@+id/exerciseRouteAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="小洲路 -小洲村"
                            android:textColor="#979797"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/time_button" />

                        <TextView
                            android:id="@+id/exerciseTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="2014.10.28 14:00-18:00"
                            android:textColor="#9B9B9B"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <!-- 点赞等按钮 -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:layout_margin="15dp"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/likeButton"
                            android:layout_width="49dp"
                            android:layout_height="27dp"
                            android:background="@drawable/like_button_selector" >

                            <TextView
                                android:id="@+id/likeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26dp"
                                android:text="9"
                                android:textColor="#9B9B9B"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/collectButton"
                            android:layout_width="47dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="9dp"
                            android:background="@drawable/collect_button_selector" >

                            <TextView
                                android:id="@+id/collectCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26dp"
                                android:text="2"
                                android:textColor="#9B9B9B"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <Button
                            android:layout_width="53dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="9dp"
                            android:background="@drawable/share_button" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="12dp"
                android:background="@drawable/divider" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:background="#F5F5F5" >

                <TextView
                    android:id="@+id/discussCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="评论 (2)"
                    android:textColor="#9B9B9B"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/discussButton"
                    android:layout_width="75dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/discuss_button" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/devider" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <ListView
                android:id="@+id/discussList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5" >
            </ListView>
        </LinearLayout>
    </com.example.bybike.routes.ObservableScrollView>

    <!-- 地图、图片区域 -->

    <RelativeLayout
        android:id="@+id/exercisePicArea"
        android:layout_width="fill_parent"
        android:layout_height="201dp"
        android:layout_marginTop="60dp" >

        <com.ab.view.sliding.AbSlidingPlayView
            android:id="@+id/mAbSlidingPlayView"
            android:layout_width="fill_parent"
            android:layout_height="201dp"
            android:visibility="gone" >
        </com.ab.view.sliding.AbSlidingPlayView>

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="201dp" />

        <Button
            android:id="@+id/mapOrPic"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_map_or_pic"
            android:onClick="clickHandler" />
    </RelativeLayout>

</RelativeLayout>