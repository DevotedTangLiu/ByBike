<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:background="#F5F5F5" >

        <RelativeLayout
            android:id="@+id/titleBar"
            android:layout_width="fill_parent"
            android:layout_height="60dp" >

            <Button
                android:id="@+id/goToSetting"
                android:layout_width="57dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/setting_button" />

            <RelativeLayout
                android:id="@+id/goToMessage"
                android:layout_width="54dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/message" >
            </RelativeLayout>

            <Button
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/message_redpin" >
            </Button>
        </RelativeLayout>

        <ImageView
            android:layout_width="117dp"
            android:layout_height="131dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/b1" />

        <com.example.bybike.util.CircleImageView
            android:id="@+id/fragment_my_image_user"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <!-- <ImageView -->
        <!-- android:id="@+id/fragment_my_image_user" -->
        <!-- android:layout_width="90dp" -->
        <!-- android:layout_height="90dp" -->
        <!-- android:layout_centerHorizontal="true" -->
        <!-- android:layout_marginTop="45dp" -->
        <!-- android:contentDescription="@null" -->
        <!-- android:scaleType="centerCrop" -->
        <!-- android:src="@drawable/user" /> -->
        <!-- myxmlns:border_color="@color/f2f2f2" -->
        <!-- myxmlns:border_width="@dimen/circle_width" -->

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_my_image_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Chaolotte Yam"
            android:textColor="#4A4A4A"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@id/userName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="总里程  "
                        android:textColor="#B9B9B9"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="103"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" km"
                        android:textColor="#B9B9B9"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="减碳量   "
                        android:textColor="#B9B9B9"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0.98"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" t"
                        android:textColor="#B9B9B9"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="骑友   "
                        android:textColor="#B9B9B9"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/friendsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="1024"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@id/userInfo"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/chooseExercise"
                    android:layout_width="46dp"
                    android:layout_height="17dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/exercise_button_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/chooseRouteBook"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/routebook_button_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/chooseMarker"
                    android:layout_width="45dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/mark_button_selector" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/userInfo"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/devider" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#E4E4E4"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>