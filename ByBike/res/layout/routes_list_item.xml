<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/routes_item_block"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E9E9E9" >

        <LinearLayout
            android:id="@+id/upperArea"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="#F5F5F5"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:background="@color/devider" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:background="@color/white" />
            <!-- 文字和图片区域 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/routePic"
                    android:layout_width="120dp"
                    android:layout_height="75dp"
                    android:layout_alignParentRight="true" 
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@id/routePic"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="骑行游小洲村"
                        android:textColor="#4A4A4A"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="13km 小洲村"
                        android:textColor="#9B9B9B"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="很久以前就打算早点起床，踩车上班。不过一直没有机会啊。今天..."
                        android:textColor="#646464"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>
            <!-- 分割线 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="9dp"
                android:background="@color/devider" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:background="@color/white" />

            <!-- 时间和按钮 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:text="2014.10.28 14:23"
                    android:textColor="#BBBBBB"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/collect"
                    android:layout_width="35dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="9dp" />

                <Button
                    android:id="@+id/talk"
                    android:layout_width="35dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@id/collect" />

                <Button
                    android:id="@+id/like"
                    android:layout_width="35dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@id/talk" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="9dp" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="9dp"
            android:layout_below="@id/upperArea" />

        <!-- 头像和用户名 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:orientation="horizontal" >

            <com.example.bybike.util.CircleImageView
                xmlns:myxmlns="http://schemas.android.com/apk/res/com.example.bybike"
                android:id="@+id/avatorPic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="25dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                myxmlns:border_color="@color/f2f2f2"
                myxmlns:border_width="0dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:text="Icy_x"
                android:textColor="#646464"
                android:textSize="9sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>